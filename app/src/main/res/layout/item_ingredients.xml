<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp">


    <TextView
        android:id="@+id/tv_name_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ingredients_ed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_count_ingredients"
        tools:text="Vegetable oil" />

    <TextView
        android:id="@+id/tv_count_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ingredients_ed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="gr"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/poppins_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_count_ingredients"
        app:layout_constraintTop_toBottomOf="@+id/tv_count_ingredients" />
</androidx.constraintlayout.widget.ConstraintLayout>